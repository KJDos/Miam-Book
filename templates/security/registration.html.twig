{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}


{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center display-2 font-dancing">Inscription</h2>
    <div class="form-area">
        {{form_start(form)}}

        {{ form_row(form.pseudo, {'attr': {'class': 'form-control'}}) }}

        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}

        {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
    
        <button type="submit" class="btn delicious-btn col-12 mt-5">S'inscrire</button>
    
        {{form_end(form)}}
    </div>
</div>


{% endblock %}
